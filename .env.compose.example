# KFSQUARE Docker Compose Environment Template
# Copy this file to .env.compose and fill in your values

# Application Configuration
NODE_ENV=production
PORT=3000
APP_NAME=KFSQUARE
APP_VERSION=1.0.0

# Database Configuration (Development - No Auth)
MONGO_PORT=27017
MONGODB_URI=mongodb://kfsquare-mongo:27017/kfsquare

# For Production with Authentication, use:
# MONGODB_URI=mongodb://username:password@kfsquare-mongo:27017/kfsquare?authSource=admin

# Redis Configuration
REDIS_PORT=6379
REDIS_URL=redis://kfsquare-redis:6379

# For Production with Authentication, use:
# REDIS_URL=redis://:your_redis_password@kfsquare-redis:6379

# Security Configuration
SESSION_SECRET=your_session_secret_here_change_this
JWT_SECRET=your_jwt_secret_here_change_this
JWT_EXPIRE=7d
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_FILES=30d
LOG_MAX_SIZE=100m
LOG_COMPRESS=true

# Security Headers
TRUST_PROXY=true
CORS_ORIGIN=https://your-domain.com
CSRF_SECRET=your_csrf_secret_here_change_this

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Feature Flags
FEATURE_CHAT_ENABLED=true
FEATURE_FILE_UPLOAD=true
FEATURE_NOTIFICATIONS=true
FEATURE_RATE_LIMITING=true
FEATURE_SECURITY_LOGGING=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000

# Performance Configuration
CLUSTER_MODE=false
KEEP_ALIVE_TIMEOUT=5000
HEADERS_TIMEOUT=10000
